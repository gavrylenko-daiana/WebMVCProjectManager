@using Core.Models
@model Project

<!DOCTYPE html>

<html>
<head>
    <title>Delete Project</title>
</head>
<body>
<div class="container py-4">
    <h1>Are you sure that you want <br>to delete "@Model.Name"?</h1>
    <div class="form-group">
        <form asp-controller="Project" asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id"/>
            <input type="submit" value="Confirm" class="btn btn-danger float-right mt-3"/>
            <a class="btn btn-outline-dark" asp-controller="Project" asp-action="Index">Cancel</a>
        </form>
    </div>
</div>
</body>
</html>